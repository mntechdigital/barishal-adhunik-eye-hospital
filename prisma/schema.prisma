generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UpcomingCampaign {
  id        String   @id @default(uuid())
  image     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
